{{if data.error}}
	<h2>Error</h2>
	{{:data.error}}<br><br>
	{{:helper.link("Reset", null, {'reseterror' : 1})}}
{{else data.new_report}}
	<div class="item">
		<div class="itemLabel">
			Author:
		</div>
		<div class="itemContent">
			{{:data.author}}
		</div>
	</div>
	<div class="block">
		{{:data.oldtext.content}}
	</div>
	<div class="item"
		<div class="itemContent">
			{{:helper.link("Edit", null, {"editReport" : 1})}}
			{{:helper.link("Close", null, {"closeEdit" : 1})}}
		</div>
	</div>
{{else data.current_book}}
	<h2>{{:data.current_book.title}}</h2>
	<div class="item">
		<div class="itemLabel">
			Author: 
		</div>
		<div class="itemContent">
			 {{:data.current_book.author}}
		</div>
		<div class="itemLabel">
			Commands: 
		</div>
		<div class="itemContent">
			{{if data.voting.up}}
				{{:helper.link("+", null, {'vote' : 'up'}, null, 'selected')}}
				{{:helper.link("-", null, {'vote' : 'down'})}}
			{{else data.voting.down}}
				{{:helper.link("+", null, {'vote' : 'up'})}}
				{{:helper.link("-", null, {'vote' : 'down'}, null,'selected')}}
			{{else}}
				{{:helper.link("+", null, {'vote' : 'up'})}}
				{{:helper.link("-", null, {'vote' : 'down'})}}
			{{/if}}
			{{:helper.link("Close", null, {'closebook' : 1})}}
			{{:helper.link("Print", null, {'printbook' : 1})}}
			{{:helper.link("Flag", null, {'flag' : 1}, null, 'redButton')}}
		</div>
	</div>
	<div class='block'>
		{{:data.current_book.content}}
	</div>
{{else}}
	<h2>Create New StarLog Entry</h2>
	<div class="item">
		<div class="itemContent">
			{{:helper.link("Bridge", null, {'newReport' : 1})}}
			{{:helper.link("Medical", null, {'newReport' : 3})}}
			{{:helper.link("Engineering", null, {'newReport' : 2})}}
			{{:helper.link("Exploration", null, {'newReport' : 4})}}
			{{:helper.link("Security", null, {'newReport' : 5})}}
			{{:helper.link("RnD", null, {'newReport' : 6})}}
		</div>
	</div>
	<div class="item">
		<div class="itemLabel">
			Sort by:
		</div>
		<div class="itemContent">
			{{:helper.link("id", null, {'sortby' : 'id'})}}
			{{:helper.link("Bridge", null, {'sortby' : 'bridge'})}}
			{{:helper.link("Engineering", null, {'sortby' : 'ce'})}}
			{{:helper.link("Medical", null, {'sortby' : 'cmo'})}}
			{{:helper.link("Exploration", null, {'sortby' : 'path'})}}
			{{:helper.link("Security", null, {'sortby' : 'hos'})}}
			{{:helper.link("RnD", null, {'sortby' : 'rnd'})}}
			{{:helper.link("Overall Score", null, {'sortby' : 'score'})}}
		</div>
	</div>

	<h2>Read StarLog</h2>
	<div class="item">
	<table style="width:100%">
		{{for data.report_list}}
		<tr><td>{{:value.id}}
			<td>{{:helper.link("Bridge", null,{'id' : value.id, 'viewReport' : 1}, value.bridge ? null : 'disabled')}}
			<td>{{:helper.link("Engineering", null,{'id' : value.id, 'viewReport' : 2}, value.ce ? null : 'disabled')}}
			<td>{{:helper.link("Medical", null,{'id' : value.id, 'viewReport' : 3}, value.cmo ? null : 'disabled')}}
			<td>{{:helper.link("Exploration", null,{'id' : value.id, 'viewReport' : 4}, value.path ? null : 'disabled')}}
			<td>{{:helper.link("Security", null,{'id' : value.id, 'viewReport' : 5}, value.hos ? null : 'disabled')}}
			<td>{{:helper.link("RnD", null,{'id' : value.id, 'viewReport' : 6}, value.rnd ? null : 'disabled')}}
			<td>{{:value.score}}
		</div>
		{{/for}}
	</table>
{{/if}}
